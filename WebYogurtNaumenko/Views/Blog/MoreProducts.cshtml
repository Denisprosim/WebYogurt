@model Freeeze.Models.tbKategorie
@{
    ViewBag.Title = "View";
}
<div class="row text-center header margin-bottom">
    <h2>MORE PRODUCTS</h2>
</div>
<div class="container">
    @foreach (var product in Model.tbProducts)
    {
        <div class="col-lg-3 text-center">
            <img src="~/Content/Img/@product.Photo" style="border-radius:50%; height:160px; margin-top:80px" />
            <h3 class="pinktext">@product.Name</h3>
        </div>
    }
    <span class="button col-lg-12">@Html.ActionLink("BACK TO PRODUCT", "Product", "Blog")</span>
</div>